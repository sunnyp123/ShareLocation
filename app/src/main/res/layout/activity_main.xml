<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.sunnypariharflash.sharelocation.MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your phone number"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:layout_marginTop="20sp" />
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50sp"
            android:id="@+id/editphone"
            android:inputType="number"
            android:textSize="20sp"
            android:layout_marginBottom="20sp"
            android:textColor="@android:color/black"
            android:background="@android:color/holo_blue_light"
            android:layout_marginRight="50sp"/>
    </android.support.design.widget.TextInputLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap the SEND CODE to verify your account .An SMS will be sent to verify your phone number.Messages and data rates may apply"
        android:layout_gravity="center"
        android:layout_marginRight="50sp"
        android:layout_marginLeft="50sp"
        android:textColor="@android:color/black"
        android:textSize="10sp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:text="Verify Phone NUmber"
        android:id="@+id/btnnext"
        android:theme="@style/AppTheme.PopupOverlay"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="100sp"
        android:layout_marginRight="100sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="100sp"
        android:layout_marginLeft="100sp"
        android:layout_marginTop="20sp"
        android:textSize="15sp"
        android:id="@+id/otp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:inputType="number"
        android:hint="Enter OTP Here..."/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Save &amp; Next"
        android:theme="@style/AlertDialog.AppCompat.Light"
        android:id="@+id/btnverfiy"
        android:background="@color/colorPrimary"
        android:layout_marginTop="20sp"/>
</LinearLayout>
